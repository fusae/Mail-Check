[Unit]
Description=Sentiment Monitor Service
After=network.target

[Service]
Type=simple
User=your_username
WorkingDirectory=/home/your_username/Mail_Check
Environment=PATH=/home/your_username/Mail_Check/venv/bin
ExecStart=/home/your_username/Mail_Check/venv/bin/python3 src/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
